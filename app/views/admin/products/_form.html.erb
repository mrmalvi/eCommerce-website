<%= simple_form_for(@product, local: true, html: { multipart: true }, url: (@product.persisted? ? admin_product_path(@product) : admin_products_path)) do |form| %>

  <div class="form-group">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, autofocus: true, class: "form-control", placeholder: "title" %>
  </div>

  <div class="form-group">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control", placeholder: "Description" %>
  </div>

  <div class="form-group">
    <%= form.label :images, "Product Images" %>
    <%= form.file_field :images, multiple: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :colors, "Colors (comma-separated) Ex: red, pink" %>
    <%= form.text_area :colors, value: @product.colors.join(", "), class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :sizes, "Sizes (comma-separated) Ex: small, medium, large" %>
    <%= form.text_area :sizes, value: @product.sizes.join(", "), class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :price %>
    <%= form.input_field :price, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.input :category_id, collection: Category.all, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit "Submit", class: "btn btn-primary btn-block" %>
  </div>
<% end %>
