<%= simple_form_for(@category, local: true, html: { multipart: true }, url: (@category.persisted? ? admin_category_path(@category) : admin_categories_path)) do |form| %>

  <div class="form-group">
    <%= form.label :category_name, class: "form-label" %>
    <%= form.text_field :name, autofocus: true, class: "form-control", placeholder: "Ex: Apple" %>
  </div>

  <div class="form-group">
    <%= form.input :parent_id, collection: Category.only_parent, class: "form-control", prompt: "None" %>
  </div>

  <div class="form-group">
    <%= form.submit "Submit", class: "btn btn-primary btn-block" %>
  </div>
<% end %>
