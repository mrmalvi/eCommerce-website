<!DOCTYPE html>
<html>
<head>
  <title>Login</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag :application %>
</head>

<body>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <h2 class="text-center my-4">Admin Login</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal"}) do |form| %>
          <div class="form-group">
            <%= form.label :email, class: "form-label" %>
            <%= form.email_field :email, autofocus: true, class: "form-control", placeholder: "Email" %>
          </div>

          <div class="form-group">
            <%= form.label :password, class: "form-label" %>
            <%= form.password_field :password, class: "form-control", placeholder: "Password" %>
          </div>

          <div class="form-group">
            <div class="form-check">
              <%= form.check_box :remember_me, class: "form-check-input" %>
              <%= form.label :remember_me, class: "form-check-label" %>
            </div>
          </div>

          <div class="form-group">
            <%= form.submit "Log in", class: "btn btn-primary btn-block" %>
          </div>
        <% end %>

        <div class="text-center mt-3">
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: "btn btn-link" %>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
